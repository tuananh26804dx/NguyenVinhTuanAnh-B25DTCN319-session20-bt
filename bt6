#include <stdio.h>
#include <string.h>

struct SinhVien {
    int id;
    char name[50];
    int age;
    char phoneNumber[15];
};

void hienThiDanhSachSinhVien(struct SinhVien danhSachSV[], int soLuong) {
    printf("Danh sach sinh vien\n");
    for (int i = 0; i < soLuong; i++) {
        printf("ID: %d, Ten: %s, Tuoi: %d, So dien thoai: %s\n",
               danhSachSV[i].id,
               danhSachSV[i].name,
               danhSachSV[i].age,
               danhSachSV[i].phoneNumber);
    }
    printf("---------------------------\n");
}

int main() {
    const int MAX_SIZE = 50;
    int soLuongHienTai = 5;

    struct SinhVien danhSachSinhVien[MAX_SIZE] = {
        {1, "Nguyen Van A", 20, "0987654321"},
        {2, "Tran Thi B", 21, "0912345678"},
        {3, "Le Van C", 22, "0909876543"},
        {4, "Pham Thi D", 20, "0976543210"},
        {5, "Hoang Van E", 23, "0965432109"}
    };

    hienThiDanhSachSinhVien(danhSachSinhVien, soLuongHienTai);

    if (soLuongHienTai < MAX_SIZE) {
        struct SinhVien sinhVienMoi;
        printf("\nNhap thong tin sinh vien can them:\n");

        printf("ID: ");
        scanf("%d", &sinhVienMoi.id);

        printf("Ten: ");
        while (getchar() != '\n'); 
        fgets(sinhVienMoi.name, sizeof(sinhVienMoi.name), stdin);
        sinhVienMoi.name[strcspn(sinhVienMoi.name, "\n")] = '\0';

        printf("Tuoi: ");
        scanf("%d", &sinhVienMoi.age);
        
        printf("So dien thoai: ");
        while (getchar() != '\n'); 
        fgets(sinhVienMoi.phoneNumber, sizeof(sinhVienMoi.phoneNumber), stdin);
        sinhVienMoi.phoneNumber[strcspn(sinhVienMoi.phoneNumber, "\n")] = '\0';
        
        danhSachSinhVien[soLuongHienTai] = sinhVienMoi;
        soLuongHienTai++;
        printf("\nDa them sinh vien thanh cong!\n");
    } else {
        printf("\nMang da day, khong the them sinh vien moi.\n");
    }
    hienThiDanhSachSinhVien(danhSachSinhVien, soLuongHienTai);

    return 0;
}
